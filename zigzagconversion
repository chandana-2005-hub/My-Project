class Solution(object):
    def convert(self, s, numRows):
        """
        :type s: str
        :type numRows: int
        :rtype: str
        """
        # Edge case: if numRows is 1 or greater than or equal to the length of the string
        if numRows == 1 or numRows >= len(s):
            return s

        # Create an array to hold strings for each row
        rows = [''] * numRows
        index, step = 0, 1

        # Traverse the string and place characters in the appropriate row
        for char in s:
            rows[index] += char
            # Change direction when reaching the top or bottom row
            if index == 0:
                step = 1
            elif index == numRows - 1:
                step = -1
            index += step

        # Combine all rows to form the final zigzag string
        return ''.join(rows)
